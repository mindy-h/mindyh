---
import skylens from '../assets/wea.png';
import pricing from '../assets/pricing_img.png';
import phorm from '../assets/phorm.png';
---

<section id="work" class="work">
	<div class="container work__container">
		<h2 class="work__title">Some of my work</h2>

		<div class="work__grid">
			<a href="#work" class="work__card fade-in" data-parallax data-speed="0.15">
				<div class="work__image">
					<img src={skylens.src} alt="Skylens Light Panels" loading="lazy" />
				</div>
				<div class="work__body">
					<p class="work__eyebrow">e-commerce</p>
					<h3 class="work__heading">Skylens Light Panels</h3>
					<p class="work__text">
						Brand identity, taxonomy, and a full ecommerce experience for a complex product line.
					</p>
					<span class="work__link">coming soon</span>
				</div>
			</a>




			<a href="/pricing" class="work__card fade-in" data-parallax data-speed="0.2" style="transition-delay: 0.1s;">
				<div class="work__image">
					<img src={pricing.src} alt="Everyday Pricing" loading="lazy" />
				</div>
				<div class="work__body">
					<p class="work__eyebrow">business process</p>
					<h3 class="work__heading">Everyday Pricing</h3>
					<p class="work__text">
						Mapped scattered workflows into a single tool to ship pricing changes with confidence.
					</p>
					<span class="work__link">click for details</span>
				</div>
			</a>
			<a href="/pricing" class="work__card fade-in" data-parallax data-speed="0.2" style="transition-delay: 0.1s;">
				<div class="work__image">
					<img src={pricing.src} alt="Everyday Pricing" loading="lazy" />
				</div>
				<div class="work__body">
					<p class="work__eyebrow">business process</p>
					<h3 class="work__heading">Everyday Pricing</h3>
					<p class="work__text">
						Mapped scattered workflows into a single tool to ship pricing changes with confidence.
					</p>
					<span class="work__link">click for details</span>
				</div>
			</a>
		</div>
	</div>
	<div class="work__blur"></div>
</section>

<style>
	.work {
		position: relative;
		padding: 3rem 0 4rem;
	}

	.work__blur {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 200px;
		background: linear-gradient(to top, rgba(26, 23, 18, 1) 0%, rgba(26, 23, 18, 0) 100%);
		pointer-events: none;
		z-index: 2;
	}

	.work__title {
		font-family: var(--font-display);
		font-size: clamp(2.25rem, 4vw, 3rem);
		color: #D0B65F;
		margin-bottom: 2rem;
		font-weight: 300;
	}

	.work__grid {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 1.5rem;
	}

	.work__card {
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 8px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.35);
		backdrop-filter: blur(4px);
		display: flex;
		flex-direction: column;
		min-height: 100%;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
		text-decoration: none;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		cursor: pointer;
		color: inherit;
	}

	.work__card:hover {
		transform: translateY(-8px) !important;
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5) !important;
	}

	.work__image {
		position: relative;
		overflow: hidden;
		max-height: 300px;
	}

	.work__image img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.work__body {
		padding: 1.25rem 1.5rem 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.4rem;
	}

	.work__eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.06em;
		font-size: 0.75rem;
		color: #D0B65F;
	}

	.work__heading {
		font-size: 2rem;
        font-family: var(--font-display);
		font-weight: 300;
		margin: 0;
		color: #F3EAD0;
	}

	.work__text {
		font-size: 0.95rem;
		line-height: 1.5;
		margin: 0.25rem 0 0.75rem;
		color: #F3EAD0;
	}

	.work__link {
		margin-top: auto;
		color: var(--color-accent);
		text-transform: uppercase;
		font-weight: 700;
		letter-spacing: 0.04em;
		font-size: 0.85rem;
		align-self: flex-start;
		display: inline-block;
	}


	@media (max-width: 640px) {
		.work {
			padding: 2.5rem 0 3rem;
		}
		.work__grid {
			grid-template-columns: 1fr;
		}
		.work__title {
			margin-bottom: 1.5rem;
			margin-top: 1.5rem;
		}
	}
</style>

