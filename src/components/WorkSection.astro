---
import skylens from '../assets/wea.png';
import pricing from '../assets/pricing_img.png';
import phorm from '../assets/phorm.png';
import arrowRight from '../assets/arrow_right.svg';
---

<section id="work" class="work">
	<div class="container work__container">
		<h2 class="work__title">Some of my work</h2>

		<div class="work__grid">
			<a href="/wea" class="work__card fade-in" data-parallax data-speed="0.15">
				<div class="work__image">
					<img src={skylens.src} alt="Skylens Light Panels" loading="lazy" />
				</div>
				<div class="work__body">
					<p class="work__eyebrow">business process</p>
					<h3 class="work__heading">WEA Assessment Portal</h3>
					<p class="work__text">
						Unified a fragmented compliance workflow for 500+ wholesaler partners into a single mobile-first portal.
					</p>
					<span class="work__link"><img src={arrowRight.src} alt="" class="work__arrow" /></span>
				</div>
			</a>




			<a href="/pricing" class="work__card fade-in" data-parallax data-speed="0.2" style="transition-delay: 0.1s;">
				<div class="work__image">
					<img src={pricing.src} alt="Everyday Pricing" loading="lazy" />
				</div>
				<div class="work__body">
					<p class="work__eyebrow">business process</p>
					<h3 class="work__heading">Everyday Pricing</h3>
					<p class="work__text">
						Mapped scattered workflows into a single tool to ship pricing changes with confidence.
					</p>
					<span class="work__link"><img src={arrowRight.src} alt="" class="work__arrow" /></span>
				</div>
			</a>
		</div>
	</div>
	<div class="work__blur"></div>
</section>

<style>
	.work {
		position: relative;
		padding: 3rem 0 4rem;
	}

	.work__blur {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 200px;
		background: linear-gradient(to top, rgba(26, 23, 18, 1) 0%, rgba(26, 23, 18, 0) 100%);
		pointer-events: none;
		z-index: 2;
	}

	.work__title {
		font-family: var(--font-display);
		font-size: clamp(2.25rem, 4vw, 3rem);
		color: #D0B65F;
		margin-bottom: 2rem;
		font-weight: 300;
	}

	.work__grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1.5rem;
	}

	.work__card {
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 8px;
		overflow: hidden;
		background: rgba(0, 0, 0, 0.35);
		backdrop-filter: blur(4px);
		display: flex;
		flex-direction: column;
		min-height: 100%;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
		text-decoration: none;
		cursor: pointer;
		color: inherit;
		/* Initial state - below and faded */
		opacity: 0;
		transform: translateY(60px);
		transition: 
			opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
			transform 0.8s cubic-bezier(0.16, 1, 0.3, 1),
			box-shadow 0.3s ease;
	}

	.work__card:nth-child(2) {
		transition-delay: 0.15s;
	}

	.work__card.is-visible {
		opacity: 1;
		transform: translateY(0);
	}

	.work__card.is-visible:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
	}

	.work__image {
		position: relative;
		overflow: hidden;
		max-height: 300px;
	}

	.work__image img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.work__body {
		padding: 1.25rem 1.5rem 4rem;
		display: flex;
		flex-direction: column;
		gap: 0.4rem;
		flex: 1;
		position: relative;
	}

	.work__eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.06em;
		font-size: 0.75rem;
		color: #D0B65F;
	}

	.work__heading {
		font-size: 2rem;
        font-family: var(--font-display);
		font-weight: 300;
		margin: 0;
		color: #F3EAD0;
	}

	.work__text {
		font-size: 0.95rem;
		line-height: 1.5;
		margin: 0.25rem 0 0.75rem;
		color: #F3EAD0;
	}

	.work__link {
		position: absolute;
		bottom: 1rem;
		right: 1rem;
		display: inline-flex;
		align-items: center;
	}

	.work__arrow {
		width: 48px;
		height: 48px;
		transition: transform 0.3s ease;
	}

	.work__card:hover .work__arrow {
		transform: translateX(4px);
	}


	@media (max-width: 640px) {
		.work {
			padding: 1.5rem 0 3rem;
		}
		.work__grid {
			grid-template-columns: 1fr;
		}
		.work__title {
			margin-bottom: 1.5rem;
			margin-top: 0;
		}
		.work__card:nth-child(2) {
			transition-delay: 0s;
		}
	}

	/* Reduce motion for accessibility */
	@media (prefers-reduced-motion: reduce) {
		.work__card {
			opacity: 1;
			transform: none;
			transition: box-shadow 0.3s ease;
		}
	}
</style>

<script>
	const cards = document.querySelectorAll('.work__card');
	
	if (cards.length) {
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('is-visible');
					}
				});
			},
			{ 
				threshold: 0.15,
				rootMargin: '0px 0px -50px 0px'
			}
		);
		
		cards.forEach((card) => observer.observe(card));
	}
</script>
