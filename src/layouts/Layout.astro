---
interface Props {
	title?: string;
}

const { title = 'Mindy House | Designer. Listener. Process builder.' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Grenze:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<div class="bottom-blur" aria-hidden="true"></div>
	</body>
</html>

<style is:global>
	/* CSS Reset & Base Styles */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	/* Design Tokens */
	:root {
		/* Colors */
		--color-bg: #060806;
		--color-text: #d9d9d9;
		--color-accent: #ddff00;
		--color-accent-dim: rgba(170, 255, 0, 0.3);
		
		/* Typography */
		--font-sans: 'Nunito Sans', sans-serif;
		--font-display: 'Grenze', 'Times New Roman', serif;
		
		/* Spacing */
		--space-xs: 0.5rem;
		--space-sm: 1rem;
		--space-md: 1.5rem;
		--space-lg: 2rem;
		--space-xl: 3rem;
		--space-2xl: 4rem;
		--space-3xl: 6rem;
		
		/* Container */
		--container-max: 1440px;
		--container-padding: 2rem;
	}

	html {
		font-family: var(--font-sans);
		background-color: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
		scroll-padding-top: 5rem;
		overflow-x: hidden;
	}

	body {
		margin: 0;
		width: 100%;
		max-width: 100vw;
		min-height: 100vh;
		overflow-x: hidden;
		background: radial-gradient(156.61% 56.08% at -1.94% 2.78%, #2B2924 32.18%, #1A1712 92.4%);
	}

	/* Typography Base */
	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		font-weight: 400;
	}

	/* Grenze weight helpers */
	.grenze-thin { font-family: 'Grenze', serif; font-weight: 100; font-style: normal; }
	.grenze-extralight { font-family: 'Grenze', serif; font-weight: 200; font-style: normal; }
	.grenze-light { font-family: 'Grenze', serif; font-weight: 300; font-style: normal; }
	.grenze-regular { font-family: 'Grenze', serif; font-weight: 400; font-style: normal; }
	.grenze-medium { font-family: 'Grenze', serif; font-weight: 500; font-style: normal; }
	.grenze-semibold { font-family: 'Grenze', serif; font-weight: 600; font-style: normal; }
	.grenze-bold { font-family: 'Grenze', serif; font-weight: 700; font-style: normal; }
	.grenze-extrabold { font-family: 'Grenze', serif; font-weight: 800; font-style: normal; }
	.grenze-black { font-family: 'Grenze', serif; font-weight: 900; font-style: normal; }
	.grenze-thin-italic { font-family: 'Grenze', serif; font-weight: 100; font-style: italic; }
	.grenze-extralight-italic { font-family: 'Grenze', serif; font-weight: 200; font-style: italic; }
	.grenze-light-italic { font-family: 'Grenze', serif; font-weight: 300; font-style: italic; }
	.grenze-regular-italic { font-family: 'Grenze', serif; font-weight: 400; font-style: italic; }
	.grenze-medium-italic { font-family: 'Grenze', serif; font-weight: 500; font-style: italic; }
	.grenze-semibold-italic { font-family: 'Grenze', serif; font-weight: 600; font-style: italic; }
	.grenze-bold-italic { font-family: 'Grenze', serif; font-weight: 700; font-style: italic; }
	.grenze-extrabold-italic { font-family: 'Grenze', serif; font-weight: 800; font-style: italic; }
	.grenze-black-italic { font-family: 'Grenze', serif; font-weight: 900; font-style: italic; }

	p {
		font-family: var(--font-sans);
		font-optical-sizing: auto;
		font-variation-settings: "wdth" 100, "YTLC" 500;
		line-height: 1.6;
		color: #d9d9d9;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	img {
		max-width: 100%;
		height: auto;
		display: block;
	}

	/* Container Utility */
	.container {
		max-width: var(--container-max);
		margin-inline: auto;
		padding-inline: var(--container-padding);
	}

	@media (max-width: 768px) {
		:root {
			--container-padding: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		:root {
			--container-padding: 1rem;
		}
	}

	/* Fade-in animations */
	.fade-in {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
	}

	.fade-in.visible {
		opacity: 1;
		transform: translateY(0);
	}

	/* Bottom blur overlay */
	.bottom-blur {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		height: 50px;
		backdrop-filter: blur(9px);
		-webkit-backdrop-filter: blur(9px);
		mask-image: linear-gradient(to top, black 0%, black 20%, transparent 100%);
		-webkit-mask-image: linear-gradient(to top, black 0%, black 20%, transparent 100%);
		pointer-events: none;
		z-index: 1000;
	}

	.bottom-blur::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(10, 9, 8, 0.6), transparent);
		pointer-events: none;
	}

	/* Disable transitions during initial load */
	.preload * {
		transition: none !important;
	}
</style>

<script>
	// Global animations and effects
	function initGlobalEffects() {
		// Remove preload class after initial load
		document.body.classList.add('preload');
		setTimeout(() => {
			document.body.classList.remove('preload');
		}, 100);

		// Fade-in Intersection Observer
		const fadeObserver = new IntersectionObserver(
			(entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('visible');
					}
				});
			},
			{
				threshold: 0.1,
				rootMargin: '0px 0px -100px 0px'
			}
		);

		// Setup fade-in observers
		const fadeElements = document.querySelectorAll('.fade-in');
		fadeElements.forEach(el => fadeObserver.observe(el));

		// Parallax with Intersection Observer (global handler)
		const PARALLAX_MAX_OFFSET = 50;
		const parallaxElements = document.querySelectorAll('[data-parallax]') as NodeListOf<HTMLElement>;
		
		if (parallaxElements.length > 0) {
			// Track which elements are in viewport
			const visibleElements = new Set<HTMLElement>();

			const parallaxObserver = new IntersectionObserver(
				(entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							visibleElements.add(entry.target as HTMLElement);
						} else {
							visibleElements.delete(entry.target as HTMLElement);
						}
					});
				},
				{ 
					rootMargin: '100px 0px',
					threshold: 0
				}
			);

			parallaxElements.forEach((element) => {
				element.style.transform = 'translateY(0)';
				parallaxObserver.observe(element);
			});

			// Apply parallax only to visible elements
			let ticking = false;
			
			const handleParallaxScroll = () => {
				const viewportHeight = window.innerHeight;
				
				visibleElements.forEach((element) => {
					const rect = element.getBoundingClientRect();
					const speed = parseFloat(element.getAttribute('data-speed') || '0.5');
					const progress = 1 - (rect.top / viewportHeight);
					const offset = Math.min(progress * PARALLAX_MAX_OFFSET * speed, PARALLAX_MAX_OFFSET);
					
					element.style.transform = `translateY(${-offset}px)`;
				});
				
				ticking = false;
			};

			const onScroll = () => {
				if (!ticking) {
					window.requestAnimationFrame(handleParallaxScroll);
					ticking = true;
				}
			};

			window.addEventListener('scroll', onScroll, { passive: true });
			handleParallaxScroll(); // Initial call

			// Cleanup for SPA navigation
			return () => {
				parallaxObserver.disconnect();
				fadeObserver.disconnect();
				window.removeEventListener('scroll', onScroll);
			};
		}

		return () => {
			fadeObserver.disconnect();
		};
	}

	// Initialize on page load
	if (typeof window !== 'undefined') {
		let cleanup: (() => void) | undefined;

		document.addEventListener('astro:page-load', () => {
			cleanup = initGlobalEffects();
		});

		document.addEventListener('astro:before-preparation', () => {
			cleanup?.();
		});

		// Initial load for non-Astro navigation
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initGlobalEffects);
		} else {
			initGlobalEffects();
		}
	}
</script>
